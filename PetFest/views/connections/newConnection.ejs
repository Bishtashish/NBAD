<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Create Connection</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' href='/main.css'>
    <link rel='stylesheet' href='/navButtons.css'>
    <link rel='stylesheet' href='/newConnection.css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>

    <div id="container">
        <%- include('../partials/header.ejs')%>
        <div class="wrap">
            <form action="/connections/" method="POST">
                <label for="connectionName">Title</label>
                <input type="text" id="connectionName" name="connectionName" required><br><br>
                <label for="dateTime">Date</label>
                <input type="date" id="dateTime" name="dateTime" required><br><br>
                <label for="startTime">Start Time</label>
                <input type="time" id="startTime" name="startTime" required><br><br>
                <label for="endTime">End Time</label>
                <input type="time" id="endTime" name="endTime" required><br><br>
                <label for="location">Location</label>
                <input type="text" id="location" name="location" required><br><br>
                <label for="connectionTopic">Category</label>
                <select id="connectionTopic" class="connectionTopic" name="connectionTopic">
                    <%   conTopics.forEach(topic =>{%>
                    <option value="<%=topic%>"><%=topic%></option>
                    <%})%>
                </select><br><br>
                <label for="details">Details</label>
                <textarea id="details" name="details" rows="4" cols="50"></textarea><br>
                <label for="hostName">Host Name</label>
                <input type="text" id="hostName" name="hostName"><br>
                <label for="image">Image</label>
                <input type="text" id="image" name="image"><br><br>
                <button class="btn" type="submit">Submit</button><br>
            </form>
        </div>
        <%- include('../partials/footer.ejs')%>

    </div>
</body>



</html>